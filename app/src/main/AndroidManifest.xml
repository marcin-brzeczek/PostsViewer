<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="mbitsystem.com.postsviewer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name="mbitsystem.com.postsviewer.InitApp"
            android:allowBackup="true"
            android:icon="@drawable/ic_file_viewer"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="mbitsystem.com.postsviewer.details.DetailsActivity">
        </activity>
        <activity android:name="mbitsystem.com.postsviewer.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="mbitsystem.com.postsviewer.base.BaseActivity"/>
    </application>

</manifest>